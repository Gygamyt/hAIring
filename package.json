{
  "name": "hairing",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "gen:api": "openapi-generator-cli generate -i ./fastapi-spec.json -g typescript-nestjs -o ./apps/api/src/generated --additional-properties=generateModels=true,generateApis=false,disallowAdditionalPropertiesIfNotPresent=false"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.25.0",
    "cross-env": "^10.1.0",
    "jest": "^29.5.0",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^3.25.32"
  }
}