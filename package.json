{
  "name": "hairing",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently \"pnpm:watch:packages\" \"pnpm:watch:api\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clean:full": "npm run clean && rimraf --glob node_modules \"packages/**/node_modules\" \"apps/**/node_modules\"",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "gen:api": "openapi-generator-cli generate -i ./fastapi-spec.json -g typescript-nestjs -o ./apps/api/src/generated --additional-properties=generateModels=true,generateApis=false,disallowAdditionalPropertiesIfNotPresent=false",
    "watch:packages": "turbo run dev --parallel",
    "watch:api": "pnpm --filter=api run start:dev"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.25.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "jest": "^29.5.0",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "uuid": "^13.0.0",
    "zod": "^3.25.32"
  }
}