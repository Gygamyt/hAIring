{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Nest.js",
  "extends": "./base.json",
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true
  }
}